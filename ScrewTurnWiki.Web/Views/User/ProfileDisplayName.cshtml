@model ScrewTurn.Wiki.Web.Models.User.ProfileDisplayNameModel
@using loc = ScrewTurn.Wiki.Web.Localization.Common.Profile
<table cellpadding="0" cellspacing="4">
    <tr>
        <td>
            <p style="text-align: right;width: 150px;">
                @Html.Raw(loc.LblDisplayName_Text)
            </p>
        </td>
        <td>
            @Html.EditorFor(model => model.DisplayName, @Model.DisplayName, new {title = loc.TxtDisplayName_ToolTip, width = "200px"})
            @Html.ValidationMessageFor(model => model.DisplayName, "", new {@class = "resulterror"})
        </td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>
            <input type="submit" value="@loc.BtnSaveDisplayName_Text" title="@loc.BtnSaveDisplayName_ToolTip"/>
            @if (!MvcHtmlString.IsNullOrEmpty(Html.ValidationSummary(true)))
            {
                <div class="resulterror">@Html.ValidationSummary(true)</div>
            }
        </td>
    </tr>
</table>
@Html.HiddenFor(model => model.Message.Type)
@Html.HiddenFor(model => model.Message.Text)