@model ScrewTurn.Wiki.Web.Models.User.ProfileEmailModel
@using loc = ScrewTurn.Wiki.Web.Localization.Common.Profile
<table cellpadding="0" cellspacing="4">
    <tr>
        <td>
            <p style="text-align: right;width: 150px;">
                @Html.Raw(loc.LblEmail1_Text):
            </p>
        </td>
        <td>
            @Html.EditorFor(model => model.Email1, @Model.Email1, new {title = loc.TxtEmail1_ToolTip, width = "200px"})
            @Html.ValidationMessageFor(model => model.Email1, "", new {@class = "resulterror"})
        </td>
    </tr>
    <tr>
        <td>
            <p style="text-align: right;width: 150px;">
                @Html.Raw(loc.LblEmail2_Text):
            </p>
        </td>
        <td>
            @Html.EditorFor(model => model.Email2, @Model.Email2, new {title = loc.TxtEmail2_ToolTip, width = "200px"})
            @Html.ValidationMessageFor(model => model.Email2, "", new {@class = "resulterror"})
        </td>
    </tr>
    <tr>
        <td>&nbsp;</td>
        <td>
            <input type="submit" value="@loc.BtnSaveEmail_Text" title="@loc.BtnSaveEmail_ToolTip"/>
            @if (!MvcHtmlString.IsNullOrEmpty(Html.ValidationSummary(true)))
            {
                <div class="resulterror">@Html.ValidationSummary(true)</div>
            }
        </td>
    </tr>
</table>
@Html.HiddenFor(model => model.Message.Type)
@Html.HiddenFor(model => model.Message.Text)